Algoritmo "semnome"


Var
   x, soma: real


Inicio
      escreva("Digite o primeiro número: ")
      leia(x)
      soma <- x
      
      enquanto x <> 0 faca
               escreva("Digite outro número: ")
               leia(x)
               soma <- soma + x
      fimenquanto

      escreva("A soma dos números foi de: ", soma:1:2)

Fimalgoritmo